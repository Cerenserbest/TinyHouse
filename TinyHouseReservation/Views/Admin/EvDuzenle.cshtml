@model TinyHouseReservations.Models.Ev

<h2>Ev Düzenle</h2>

<form method="post" asp-action="EvDuzenle">
    <input type="hidden" asp-for="EvID" />

    <div class="form-group">
        <label asp-for="Baslik"></label>
        <input asp-for="Baslik" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Aciklama"></label>
        <textarea asp-for="Aciklama" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Konum"></label>
        <input asp-for="Konum" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Fiyat"></label>
        <input asp-for="Fiyat" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Durum"></label>
        <input asp-for="Durum" type="checkbox" />
        Aktif mi?
    </div>
    @if (ViewBag.ModelErrors != null)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (string error in ViewBag.ModelErrors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }
    <input type="hidden" asp-for="GorselYolu" value="@Model.GorselYolu ?? " default.jpg"" />



    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
