@{
}
@model TinyHouseReservations.Models.Kullanici

<h2>Kullanıcı Düzenle</h2>

<form method="post" asp-action="KullaniciDuzenle">
    <input type="hidden" asp-for="KullaniciID" /><input type="hidden" asp-for="Durum" />

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <div class="form-group">
        <label>Ad</label>
        <input asp-for="Ad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Soyad</label>
        <input asp-for="Soyad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <input asp-for="Sifre" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label>Rol</label>
        <select asp-for="RolID" class="form-control">
            <option value="1">Admin</option>
            <option value="2">User</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
