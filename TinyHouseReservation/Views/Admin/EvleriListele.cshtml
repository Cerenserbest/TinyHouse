@model List<TinyHouseReservations.Models.Ev>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ev Listesi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Konum</th>
            <th>Fiyat</th>
            <th>Durum</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model)
        {
            <tr>
                <td>@ev.Baslik</td>
                <td>@ev.Aciklama</td>
                <td>@ev.Konum</td>
                <td>@ev.Fiyat ₺</td>
                <td>@(ev.Durum ? "Aktif" : "Pasif")</td>
            </tr>
        }
    </tbody>
</table>
